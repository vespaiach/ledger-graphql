{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "strictNullChecks": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitThis": true,
    "sourceMap": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "module": "CommonJS",
    "target": "ES2019",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "skipLibCheck": true,
    "outDir": "./build",
    "paths": {
      "src/*": ["src/*"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
