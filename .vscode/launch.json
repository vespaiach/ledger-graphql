{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Debugger",
      "request": "launch",
      "runtimeArgs": [
        "node",
        "--debug",
        "--transpile-only",
        "--prefer-ts",
        "-r",
        "tsconfig-paths/register"
      ],
      "args": ["src/index.ts"],
      "runtimeExecutable": "node",
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceRoot}",
      "type": "node",
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}
