{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Debugger",
      "request": "launch",
      "runtimeArgs": [
        "-r",
        "${workspaceFolder}/node_modules/ts-node/register",
        "-r",
        "${workspaceFolder}/node_modules/tsconfig-paths/register"
      ],
      "protocol": "inspector",
      "envFile": "${workspaceFolder}/.env",
      "args": ["./src/index.ts"],
      "skipFiles": ["<node_internals>/**"],
      "cwd": "${workspaceRoot}",
      "type": "node"
    }
  ]
}
