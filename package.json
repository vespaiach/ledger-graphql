{
  "name": "ledger-graphql",
  "version": "1.0.0",
  "description": "GraphQL backend server for Ledger website",
  "main": "index.js",
  "author": "Toan Nguyen <nta.toan@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^6.0.0-beta.0",
    "@prisma/client": "^3.14.0",
    "@types/node": "^17.0.13",
    "apollo-datasource": "^3.1.0",
    "apollo-server": "^3.6.2",
    "apollo-server-core": "^3.6.2",
    "apollo-server-express": "^3.6.2",
    "bcryptjs": "^2.4.3",
    "email-validator": "^2.0.4",
    "express": "^4.17.2",
    "graphql": "^16.5.0",
    "jsonwebtoken": "^8.5.1",
    "lru-cache": "^7.10.1",
    "nodemailer": "^6.7.2",
    "ts-node": "^10.4.0",
    "tsconfig-paths": "^3.12.0",
    "tscpaths": "^0.0.9",
    "typescript": "^4.5.5",
    "uuid": "^8.3.2"
  },
  "scripts": {
    "postinstall": "prisma generate | npm run gentype",
    "dev": "DEBUG=express:* ts-node -r tsconfig-paths/register ./src/index.ts",
    "start": "node ./build/index.js",
    "build": "tsc -p . && tscpaths -p tsconfig.json -s ./src -o ./build",
    "gentype": "graphql-codegen --config codegen.yml",
    "seed": "ts-node -r tsconfig-paths/register ./src/db/seed.ts",
    "migrate": "prisma migrate dev"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^2.4.0",
    "@graphql-codegen/typescript": "^2.4.2",
    "@graphql-codegen/typescript-resolvers": "^2.4.3",
    "@types/lru-cache": "^7.4.0",
    "@types/nodemailer": "^6.4.4",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^4.30.0",
    "@typescript-eslint/parser": "^4.30.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "prettier": "^2.3.2",
    "prisma": "^3.14.0"
  }
}
